<!doctype html>
<html lang="">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= projectName %> — Shapes</title>

  <!-- ================================================ -->
  <!-- <%= projectName %> STYLESHEETS -->
  <!-- ================================================ -->
  <link rel="stylesheet" href="./css/<%= filenamePrefix %>-base.css">
  <% for(var i=0; i < fonts.length; i++) { %>
  <link rel="stylesheet" href="./fonts/<%= fonts[i] %>/<%= filenamePrefix %>-font.css">
  <% } %>
  <link rel="stylesheet" href="./css/<%= filenamePrefix %>-text.css">

  <link rel="stylesheet" href="./css/<%= filenamePrefix %>-colours.css">
  <link rel="stylesheet" href="./css/<%= filenamePrefix %>-shapes.css">
  <link rel="stylesheet" href="./css/docs-style.css">
  <!-- ================================================ -->

  <meta name="description" content="<%= projectName %> — UI design system, generated by LibRext">
  <meta property="og:title" content="<%= projectName %> — Shapes">
  <meta property="og:type" content="website">

  <link rel="icon" href="/favicon.ico" sizes="any">
  <!-- <link rel="icon" href="/icon.svg" type="image/svg+xml"> -->
  <link rel="apple-touch-icon" href="icon.png">

  <!-- <link rel="manifest" href="site.webmanifest"> -->
  <meta name="theme-color" content="#fafafa">
</head>

<body>

  <div class="page-container">
    <section class="page-section">
      <h1 class="section-heading <%= tokenPrefix %>-tscale-d4"><%= projectName %> — Shapes</h1>
      <p>Back to <a href="./index.html">Specimens</a></p>
    </section>

    <hr class="section-divider" />

    <section class="page-section">
      <h2>Border Radii</h2>

      <div class="shape-box-set border-radius">
        <% for(var i=0; i < borderRadiusSizes.length; i++) { %>
        <div class="shape-box-wrapper">
          <div class="shape-box <%= tokenPrefix %>-bradius <%= borderRadiusSizes[i].sizeCode %>">
            <span class="box-text box-heading"><%= borderRadiusSizes[i].heading %></span><br />
            <span class="box-text box-body"><%= borderRadiusSizes[i].body %></span>
          </div>
        </div>
        <% } %>
      </div>

      <hr class="section-divider page-example-divider" />

      <h2>Box Shadows</h2>

      <div class="shape-box-set box-shadow">
        <% for(var i=0; i < boxShadowSizes.length; i++) { %>
        <div class="shape-box-wrapper">
          <div class="shape-box <%= tokenPrefix %>-bshadow <%= boxShadowSizes[i].sizeCode %>">
            <span class="box-text box-heading"><%= boxShadowSizes[i].heading %></span><br />
            <span class="box-text box-body"><%= boxShadowSizes[i].body %></span>
          </div>
        </div>
        <% } %>
      </div>

      <hr class="section-divider page-example-divider" />

      <h2>Widgets & Inputs</h2>

      <div class="shape-box-set widget">
        <% for(var i=0; i < widgetSizes.length; i++) { %>
        <div class="shape-box-wrapper">
          <div class="shape-box widget <%= tokenPrefix %>-widget <%= widgetSizes[i].sizeCode %>">
            <span class="box-text box-heading"><%= widgetSizes[i].heading %></span> —
            <span class="box-text box-body"><%= widgetSizes[i].body %></span>
          </div>
        </div>
        <% } %>
      </div>
    </section>

  </div>
</body>

</html>